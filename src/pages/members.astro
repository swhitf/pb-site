---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Members - PB Dodgeball">
  <main class="max-w-7xl mx-auto px-4 py-8">
    <!-- Hero Section -->
    <section class="text-center mb-16">
      <h1 class="text-5xl font-bold text-yellow-500 mb-4">Members</h1>
      <div class="w-24 h-1 bg-[rgb(248,187,4)] mx-auto"></div>
    </section>

    <!-- Placeholder Content -->
    <section class="mb-20">
      <div class="max-w-4xl mx-auto text-center">
        <div class="bg-white/5 backdrop-blur-sm rounded-xl border border-white/10 p-12">
          <svg class="w-24 h-24 text-yellow-500 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
          <h2 class="text-3xl font-bold text-white mb-4">Coming Soon</h2>
          <p class="text-lg text-white/80">
            We're working on building our members directory. Check back soon!
          </p>
        </div>
      </div>
    </section>
  </main>
</Layout>
