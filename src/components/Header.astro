<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobileMenuBtn');
  const mobileMenu = document.getElementById('mobileMenu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    if (!mobileMenuBtn?.contains(e.target as Node) && !mobileMenu?.contains(e.target as Node)) {
      mobileMenu?.classList.add('hidden');
    }
  });

  // Scroll detection for header border, shadow, rounded corners, and width
  const headerContent = document.getElementById('headerContent');
  let isScrolled = false;

  function updateHeaderStyle() {
    const scrollPosition = window.scrollY;

    if (scrollPosition > 20 && !isScrolled) {
      isScrolled = true;
      headerContent?.classList.remove('border-transparent', 'w-full', 'max-w-[1080px]');
      headerContent?.classList.add('border-gray-200', 'shadow-sm', 'rounded-2xl', 'max-w-[960px]');
    } else if (scrollPosition <= 20 && isScrolled) {
      isScrolled = false;
      headerContent?.classList.remove('border-gray-200', 'shadow-sm', 'rounded-2xl', 'max-w-[960px]');
      headerContent?.classList.add('border-transparent', 'w-full', 'max-w-[1080px]');
    }
  }

  // Listen for scroll events
  window.addEventListener('scroll', updateHeaderStyle);

  // Check initial state
  updateHeaderStyle();
</script>
